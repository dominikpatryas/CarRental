@model User

@{
    ViewData["Title"] = "Register Login Page";
}

<h1>Hey, you can register! </h1>
<div class="row">
    <div class="col-md-6">
        <h2 class="text-center">Register</h2>
        <div class="jumbotron">
            <form role="form" asp-action="Register" asp-controller="Auth" method="post">
                <div class="form-group">
                    <label for="Username">User Name</label>
                    <input type="text" name="Username" asp-for="Username" autocomplete="off" class="form-control input-sm" placeholder="Username">
                </div>
                <div class="form-group">
                    <label for="Password">Password</label>
                    <input type="password" name="Password" asp-for="Password" autocomplete="off" class="form-control input-sm" placeholder="Password">
                </div>
                <input type="submit" value="Register" class="btn btn-info btn-block">
            </form>
        </div>
    </div>
    <div class="col-md-6">
        <h2 class="text-center">Login</h2>
        <div class="jumbotron">
            <form role="form" asp-action="Login" asp-controller="Auth" method="post">
                <div class="form-group">
                    <label for="Username">User Name</label>
                    <input type="text" name="Username" asp-for="Username" autocomplete="off" class="form-control input-sm" placeholder="Username">
                </div>
                <div class="form-group">
                    <label for="Password">Password</label>
                    <input type="password" name="Password" asp-for="Password" autocomplete="off" class="form-control input-sm" placeholder="Password">
                </div>
                <input type="submit" value="Login" class="btn btn-info btn-block">
            </form>
        </div>
    </div>
 </div>